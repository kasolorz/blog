---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../config";
---

<header>
  <h2>
    {SITE_TITLE}
  </h2>
  <nav>
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
    <HeaderLink href="https://twitter.com/biignoisee" target="_blank">
      Twitter
    </HeaderLink>
    <HeaderLink href="https://github.com/omargabrielaguilar" target="_blank">
      GitHub
    </HeaderLink>
    <button id="themechange">Theme</button>
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
		
	}
</style>

<script is:inline>
  const buttonTheme = document.querySelector("#themechange") 
  buttonTheme.onclick = changeTheme;
  
  const body = document.querySelector(".body")

  function changeTheme(){
    body.classList.toggle("light-mode");
  }

</script>